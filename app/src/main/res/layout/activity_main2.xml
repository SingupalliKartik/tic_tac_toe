<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0A2232"
    tools:context=".MainActivity2">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montaga"
        android:shadowColor="@color/white"
        android:text="Hey, Player!"
        android:textColor="@color/white"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.288" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="258dp"
        android:layout_height="100dp"
        android:fontFamily="@font/montaga"
        android:lineSpacingExtra="5sp"
        android:text="Welcome to the Game. Letâ€™s  play The most intrative Tic Tac Toe"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintVertical_bias="0.112" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#E9E4F0"
        android:capitalize="none"
        android:fontFamily="@font/montaga"
        android:paddingLeft="57sp"
        android:paddingTop="14sp"
        android:paddingRight="57sp"
        android:paddingBottom="14sp"
        android:shadowColor="#351C1C"
        android:text="Let's Play"
        android:textAllCaps="false"
        android:textColor="#0A2232"
        android:textColorHighlight="#E41313"
        android:textColorHint="#000000"
        android:textColorLink="#CA4F4F"
        android:textSize="25sp"
        android:onClick="openActivity"
        app:cornerRadius="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:layout_constraintVertical_bias="0.29"
        app:rippleColor="#BB0909"
        app:strokeColor="#523E3E" />
</androidx.constraintlayout.widget.ConstraintLayout>