<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0A2232"
    tools:context=".MainActivity3">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montaga"
        android:gravity="center_horizontal"
        android:text="Choose your \n Opponent"
        android:textColor="@color/white"

        android:textSize="40sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.255" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:backgroundTint="#E9E4F0"
        android:capitalize="none"
        android:fontFamily="@font/montaga"
        android:onClick="openActivity2"
        android:paddingLeft="57sp"
        android:paddingTop="17sp"
        android:paddingRight="57sp"
        android:paddingBottom="17sp"
        android:shadowColor="#351C1C"
        android:text="Computer"
        android:textAllCaps="false"
        android:textColor="#0A2232"
        android:textColorHighlight="#E41313"
        android:textColorHint="#000000"
        android:textColorLink="#CA4F4F"
        android:textSize="25sp"
        app:cornerRadius="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        app:layout_constraintVertical_bias="0.0"
        app:rippleColor="#9B3F3F"
        app:strokeColor="#523E3E" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#E9E4F0"
        android:capitalize="none"
        android:fontFamily="@font/montaga"
        android:onClick="openActivity"
        android:paddingLeft="57sp"
        android:paddingTop="17sp"
        android:paddingRight="57sp"
        android:paddingBottom="17sp"
        android:shadowColor="#351C1C"
        android:text="Friend"
        android:textAllCaps="false"
        android:textColor="#0A2232"
        android:textColorHighlight="#E41313"
        android:textColorHint="#000000"
        android:textColorLink="#CA4F4F"
        android:textSize="25sp"
        app:cornerRadius="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button"
        app:layout_constraintVertical_bias="0.247"
        app:rippleColor="#BB0909"
        app:strokeColor="#523E3E" />
</androidx.constraintlayout.widget.ConstraintLayout>